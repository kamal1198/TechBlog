<div class="row">
    <div class="col-md-6">
        <h2>New Post</h2>

        <form class="create-form" action="/api/posts" method="POST">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="title" class="form-control" name="post-title" placeholder="title">
            </div>
            <div class="mt-3">
                <label for="post-text">Text</label>
                <textarea id="post-text" class="form-control" name="post-text"></textarea>
            </div>
            <button type="submit" class="btn btn-danger mt-3">Create</button>
        </form>
    </div>
    <div class="col-md-4 offset-md-2">
        {{#if posts.length}}
        <h2>Your Posts</h2>
        <ol>
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="btn btn-danger mt-2">Edit post</a>
            </li>
            {{/each}}
        </ol>
        {{/if}}
    </div>
</div>