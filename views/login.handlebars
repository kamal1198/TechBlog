<div class="row">
    <div class="col-md-5 mx-auto">

        <div class="card mt-3">
            <h3 class="card-header">Login</h3>

            <form id="login-form" class="card-body">
                <label class="mt-3" for="username">Username</label>
                <input id="username" type="text" autofocus="true" class="form-control" />
                <label class="mt-3" for="password">Password</label>
                <input id="password" type="password" autofocus="true" class="form-control" />
                <button type="submit" class="btn btn-success mt-3">LOGIN</button>
            </form>
        </div>

        <a class="btn btn-danger mt-3" href="/signup">Sign up instead</a>
    </div>
</div>

